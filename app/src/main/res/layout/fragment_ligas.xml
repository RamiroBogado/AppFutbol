<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ligas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".LigasFragment">

    <!-- Toolbar en la parte superior -->
    <include
        android:id="@+id/toolbar"
        layout="@layout/layout_toolbar" />


    <!-- Contenedor para el contenido centrado -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- Título -->
        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="LIGAS"
            android:textSize="50sp"
            android:textStyle="bold" />

        <!-- Primera fila de botones cuadrados -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <!-- Primer botón cuadrado con logo -->
            <LinearLayout
                android:id="@+id/btnLogo1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="12dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/button_square_background"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/ivLogo1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="fitCenter"
                    android:contentDescription="Logo Premier League"
                    android:src="@mipmap/pl" />
            </LinearLayout>

            <!-- Segundo botón cuadrado con logo -->
            <LinearLayout
                android:id="@+id/btnLogo2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="12dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/button_square_background"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/ivLogo2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="fitCenter"
                    android:contentDescription="Logo Bundesliga"
                    android:src="@mipmap/bl1" />
            </LinearLayout>
        </LinearLayout>

        <!-- Segunda fila de botones cuadrados -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <!-- Tercer botón cuadrado con logo -->
            <LinearLayout
                android:id="@+id/btnLogo3"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="12dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/button_square_background"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/ivLogo3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="fitCenter"
                    android:contentDescription="Logo Serie A"
                    android:src="@mipmap/sa" />
            </LinearLayout>

            <!-- Cuarto botón cuadrado con logo -->
            <LinearLayout
                android:id="@+id/btnLogo4"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="12dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/button_square_background"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/ivLogo4"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="fitCenter"
                    android:contentDescription="Logo La Liga"
                    android:src="@mipmap/pd" />
            </LinearLayout>
        </LinearLayout>

        <!-- Botón Volver con icono -->
        <Button
            android:id="@+id/btnVolver"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@android:color/black"
            android:text="Volver"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:drawableLeft="@android:drawable/ic_media_previous"
            android:drawableTint="@android:color/white" />
    </LinearLayout>

</LinearLayout>