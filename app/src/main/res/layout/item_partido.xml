<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="16dp">

    <!-- Fecha y Hora centradas -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/tv_fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#666666"
            android:text="2025/09/31"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/tv_hora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#666666"
            android:text="15h00"/>
    </LinearLayout>

    <!-- Equipos perfectamente centrados -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="8dp">

        <!-- Equipo Local (alineado a la derecha) -->
        <TextView
            android:id="@+id/tv_equipo_local"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="Aston Villa FC"
            android:ellipsize="end"
            android:maxLines="1"
            android:gravity="center"
            android:paddingEnd="8dp"/>

        <!-- VS centrado -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="vs"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#999999"
            android:paddingHorizontal="4dp"/>

        <!-- Equipo Visitante (alineado a la izquierda) -->
        <TextView
            android:id="@+id/tv_equipo_visitante"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="Crystal Palace FC"
            android:ellipsize="end"
            android:maxLines="1"
            android:gravity="center"
            android:paddingStart="8dp"/>
    </LinearLayout>

    <!-- Resultado centrado -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_resultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#E53935"
            android:text="0 - 3"
            android:background="#FFEBEE"
            android:paddingHorizontal="20dp"
            android:paddingVertical="8dp"/>
    </LinearLayout>
</LinearLayout>